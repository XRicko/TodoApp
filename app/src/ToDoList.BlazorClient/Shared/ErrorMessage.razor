<div class="fail overlay text-danger">
	@Error
	<button type="button" class="close" @onclick="CloseError">
		<i class="oi oi-x"></i>
	</button>
</div>

@code {
	[Parameter]
	public string Error { get; set; }
	[Parameter]
	public EventCallback<string> ErrorChanged { get; set; }

	private async Task CloseError()
	{
		await ErrorChanged.InvokeAsync("");
	}
}
